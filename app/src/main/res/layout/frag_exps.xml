<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <ImageView
        android:id="@+id/menino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:src="@drawable/menino_normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/btnMaoCabeca"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/mao_cabeca" />

        <ImageView
            android:id="@+id/btnPegaPe"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/pega_pe" />

        <ImageView
            android:id="@+id/btnDarTchau"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/dar_tchau" />

        <ImageView
            android:id="@+id/btnMandaBeijo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/manda_beijo" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnOk"
            android:src="@drawable/ok"
            android:paddingBottom="10dp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnNo"
            android:paddingBottom="10dp"
            android:src="@drawable/no"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/btnOk"/>

        </RelativeLayout>

</RelativeLayout>
