<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fazenda_fora"
    tools:context="com.leonardo.fonohu.AcertaAnimais3">

    <ImageView
        android:id="@+id/bode"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_above="@+id/porco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/bode" />

    <ImageView
        android:id="@+id/porco"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/pato"
        android:layout_toEndOf="@+id/bode"
        android:layout_toRightOf="@+id/bode"
        android:src="@drawable/porco" />

    <ImageView
        android:id="@+id/pato"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/pato" />

    <ImageView
        android:id="@+id/btnSeguir"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_seguir"
        android:visibility="invisible" />

</RelativeLayout>
