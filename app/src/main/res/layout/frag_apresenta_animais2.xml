<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.leonardo.fonohu.ApresentaAnimais2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texto"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/toque_animais_texto"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/vaca"
        android:layout_gravity="center"
        android:src="@drawable/vaca"
        android:layout_below="@+id/texto"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/cavalo"
        android:layout_gravity="left|bottom"
        android:src="@drawable/cavalo"
        android:layout_below="@+id/vaca"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/galinha"
        android:layout_gravity="right|bottom"
        android:src="@drawable/galinha"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:id="@+id/linearLayout3">

        <ImageView
            android:id="@+id/btnOk"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/ok" />

        <ImageView
            android:id="@+id/btnNo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/no" />
    </LinearLayout>

</RelativeLayout>
